{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-console": [1, { "allow": ["warn", "error"] }],
        "comma-dangle": 0,
		"indent": [2, "tab"],
		"no-tabs": 0,
        // "semi": "off",
        "semi": [2, "always"],
        "camelcase": 0
    }
}
